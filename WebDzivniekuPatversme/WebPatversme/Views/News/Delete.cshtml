@model WebDzivniekuPatversme.Models.ViewModels.NewsViewModel

@{
    ViewData["Title"] = "Dzēst Ziņas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Dzēst Ziņas</h1>

<h3>Vai esi pārliecināts, ka gribi izdzēst šo ziņu?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateAdded)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateAdded)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="NewsID" />
        <input type="submit" value="Dzēst" class="btn btn-danger" /> |
        <a asp-action="Index">Atpakaļ uz sarakstu</a>
    </form>
</div>