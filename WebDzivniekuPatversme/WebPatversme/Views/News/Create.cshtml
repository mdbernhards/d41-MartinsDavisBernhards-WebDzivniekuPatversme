@model WebDzivniekuPatversme.Models.ViewModels.NewsViewModel

@{
    ViewData["Title"] = "Pievienot ziņas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Pievienot</h1>

<h4>Ziņas</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger" />
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Text" class="control-label"></label>
                    <textarea asp-for="Text"></textarea>
                    <span asp-validation-for="Text" class="text-danger" />
                </div>
                <div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <input asp-for="Image" />
                    <span asp-validation-for="Image" class="text-danger" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Pievienot" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Atpakaļ uz sarakstu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
    tinymce.init({
        selector: 'textarea',
        height: "350",
        content_css : 'writer',
    });</script>
}