@model WebDzivniekuPatversme.Models.ViewModels.News.NewsCreateViewModel

@{
    ViewData["Title"] = "Pievienot ziņas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Pievienot Rakstu</h1>

<hr />
<form asp-action="Create" enctype="multipart/form-data">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger" />
        </div>
    </div>
    <div style="padding: 1%">
        <div class="form-group">
            <label asp-for="Text" class="control-label"></label>
            <textarea asp-for="Text"></textarea>
            <span asp-validation-for="Text" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="Image" class="control-label"></label>
            <input asp-for="Image" />
            <span asp-validation-for="Image" class="text-danger" />
        </div>
        <div class="form-group">
            <input type="submit" value="Pievienot" class="btn btn-primary" />
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Atpakaļ uz sarakstu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        tinymce.init({
            selector: 'textarea',
            width: "100%",
            height: "650",
            content_css: 'writer',
        });
    </script>
}