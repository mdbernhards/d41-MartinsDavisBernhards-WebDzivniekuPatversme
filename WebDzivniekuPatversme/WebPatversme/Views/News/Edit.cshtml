@model WebDzivniekuPatversme.Models.ViewModels.NewsViewModel

@{
    ViewData["Title"] = "Labot ziņu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Labot @Model.Title</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @Html.HiddenFor(model => model.NewsID)
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger" />
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Text" class="control-label"></label>
                    <textarea asp-for="Text"></textarea>
                    <span asp-validation-for="Text" class="text-danger" />
                </div>
                <div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <input asp-for="Image" />
                    <span asp-validation-for="Image" class="text-danger" />
                </div>
                <div>
                    <img src="~/uploads/images/news/@Model.ImagePath" alt="@Model.Title bilde" onerror="this.onerror = null;this.src = '/uploads/images/news/defaultnews.png'" asp-append-version="true"
                         class="rounded-circle"
                         height="200"
                         width="200"
                         style="
                        object-fit: cover;
                        box-shadow: 0px 0px 20px #888;
                        left: 100%;
                        padding: 6px;" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Saglabāt" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Atpakaļ uz sarakstu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>tinymce.init({
        selector: 'textarea',
        height: "350",
        content_css: 'writer',
    });</script>
}