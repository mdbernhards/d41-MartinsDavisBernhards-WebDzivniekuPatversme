@model WebDzivniekuPatversme.Models.ViewModels.NewsViewModel

@{
    ViewData["Title"] = "Par Dzīvnieku";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.Title</h1>

<div>
    <hr />
    <div class="col-sm-6">
        <img src="~/uploads/images/news/@Model.ImagePath" alt="@Model.Title bilde" onerror="this.onerror = null;this.src = '/uploads/images/news/defaultnews.png'" asp-append-version="true"
             class="rounded-circle"
             height="200"
             width="200"
             style="
                object-fit: cover;
                box-shadow: 0px 0px 20px #888;
                left: 100%;
                padding: 6px;" />
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateAdded)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateAdded)
        </dd>
    </dl>
</div>

<form asp-action="Delete">
    @if (ViewContext.HttpContext.User.IsInRole("administrator") || ViewContext.HttpContext.User.IsInRole("worker"))
    {
        @Html.ActionLink("Labot", "Edit", new { id = Model.NewsID }, new { @class = "btn btn-primary" })
        @Html.Raw("  ")
        <input type="hidden" asp-for="NewsID" />
        <input type="submit" value="Dzēst" class="btn btn-danger" />
        @Html.Raw(" | ")
    }
    <a asp-action="Index">Atpakaļ uz sarakstu</a>
</form>