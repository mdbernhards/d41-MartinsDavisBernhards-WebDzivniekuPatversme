@model IEnumerable<WebDzivniekuPatversme.Models.ViewModels.NewsViewModel>

@{
    ViewData["Title"] = "Ziņas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Ziņas!</h1>
    <p>Saraksts ar Ziņām</p>
</div>

<p>
    <a asp-action="Create">+ Pievienot ziņas</a>
</p>

@using (Html.BeginForm())
{
    <p>
        Meklē pēc titula: @Html.TextBox("SearchString")
        <input type="submit" value="Meklēt" />
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Tituls", "Index", new { sortOrder = ViewBag.TitleSortParm })
            </th>
            <th>
                @Html.ActionLink("Teksts", "Index", new { sortOrder = ViewBag.TextSortParm })
            </th>
            <th>
                @Html.ActionLink("Izveidošanas datums", "Index", new { sortOrder = ViewBag.DateAddedSortParm })
            </th>
            <th>
                ImagePath
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayTextFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayTextFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayTextFor(modelItem => item.DateAdded)
                </td>
                <td>
                    @Html.DisplayTextFor(modelItem => item.ImagePath)
                </td>
                <td>
                    @if (ViewContext.HttpContext.User.IsInRole("administrator") || ViewContext.HttpContext.User.IsInRole("worker"))
                    {
                        @Html.ActionLink("Labot", "Edit", new { id = item.NewsID })
                        @Html.Raw(" | ")
                        @Html.ActionLink("Dzēst", "Delete", new { id = item.NewsID })
                        @Html.Raw(" | ")
                    }

                    @Html.ActionLink("Par", "Details", new { id = item.NewsID })
                </td>
            </tr>
        }
    </tbody>
</table>