@model WebDzivniekuPatversme.Models.ViewModels.Shelters.ShelterEditViewModel

@{
    ViewData["Title"] = "Labot patversmi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Labot @Model.Name</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.HiddenFor(model => model.Id)
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="AnimalCapacity" class="control-label"></label>
                <input asp-for="AnimalCapacity" class="form-control" />
                <span asp-validation-for="AnimalCapacity" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" />
                <span asp-validation-for="Image" class="text-danger" />
            </div>
            <div>
                <img src="~/uploads/images/shelters/@Model.ImagePath" alt="@Model.Name bilde" onerror="this.onerror = null;this.src = '/uploads/images/shelters/defaultshelter.png'" asp-append-version="true"
                     class="rounded-circle"
                     height="200"
                     width="200"
                     style="
                        object-fit: cover;
                        box-shadow: 0px 0px 20px #888;
                        left: 100%;
                        padding: 6px;" />
            </div>
            <div class="form-group">
                <input type="submit" value="Saglabāt" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Atpakaļ uz sarakstu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        tinymce.init({
            selector: 'textarea',
            width: "100%",
            height: "300",
            content_css: 'writer',
        });
    </script>
}