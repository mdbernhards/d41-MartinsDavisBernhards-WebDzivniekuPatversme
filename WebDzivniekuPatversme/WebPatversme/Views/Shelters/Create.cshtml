@model WebPatversme.Models.AnimalShelters
@{
    ViewData["Title"] = "Pievienot Patversmi";
}

@using (Html.BeginForm("Create", "Shelters", FormMethod.Post))
{
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th colspan="2" align="center">Add News</th>
        </tr>
        <tr>
            <td>ID: </td>
            <td>
                @Html.TextBoxFor(model => model.AnimalShelterID)
            </td>
        </tr>
        <tr>
            <td>AnimalCapacity: </td>
            <td>
                @Html.TextBoxFor(model => model.AnimalCapacity)
            </td>
        </tr>
        <tr>
            <td>Name: </td>
            <td>
                @Html.TextBoxFor(model => model.Name)
            </td>
        </tr>
        <tr>
            <td>Address: </td>
            <td>
                @Html.TextBoxFor(model => model.Address)
            </td>
        </tr>
        <tr>
            <td>PhoneNumber: </td>
            <td>
                @Html.TextBoxFor(model => model.PhoneNumber)
            </td>
        </tr>
        <tr>
            <td>ImagePath: </td>
            <td>
                @Html.TextBoxFor(model => model.ImagePath)
            </td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Create" /></td>
        </tr>
    </table>
}