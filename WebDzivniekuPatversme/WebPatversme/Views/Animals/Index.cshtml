@model WebDzivniekuPatversme.Services.Other.PaginatedList<WebDzivniekuPatversme.Models.ViewModels.AnimalsViewModel>
@using WebDzivniekuPatversme.Models.ViewModels; 

@{
    ViewData["Title"] = "Dzīvnieki";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Dzīvnieki!</h1>
</div>

<p>
    <a asp-action="Create">+ Pievienot dzīvnieku</a>
</p>

<form asp-action="Index" method="get" style="padding-left: 1%">
    <div class="row">
        <div id="dataListItem" class="col-md-4">
            <label class="control-label">Pēc vecuma</label>
            <select name="age" class="form-control" value="@ViewData["Age"]" asp-items="((IEnumerable<AnimalsViewModel>) @ViewData["DropDown"])
                    .GroupBy(t => t.Age)
                    .Select(g => g.First())
                    .Select(x => new SelectListItem {  Text = x.Age.ToString(), Value = x.Age.ToString() })
                    .AsEnumerable()">
                <option value="@ViewData["Age"]">
                    @if (ViewData["Age"].ToString() == "0")
                    {
                        @Html.Raw("--Vecums--")
                    }
                    else
                    {
                        @ViewData["Age"]
                    }
                </option>
            </select>
        </div>
        <div id="dataListItem" class="col-md-4">
            <label class="control-label">Pēc sugas</label>
            <select name="species" class="form-control" value="@ViewData["Species"]" asp-items="((IEnumerable<AnimalsViewModel>) @ViewData["DropDown"])
                    .GroupBy(t => t.Species)
                    .Select(g => g.First())
                    .Select(x => new SelectListItem {  Text = x.Species, Value = x.Species })
                    .AsEnumerable()">
                <option value="@ViewData["Species"]">
                    @if (ViewData["Species"] == null)
                    {
                        @Html.Raw("--Suga--")
                    }
                    else
                    {
                        @ViewData["Species"]
                    }
                </option>
            </select>
        </div>
        <div id="dataListItem" class="col-md-4">
            <label class="control-label">Pēc krāsas</label>
            <select name="colour" class="form-control" value="@ViewData["Colour"]" asp-items="((IEnumerable<AnimalsViewModel>) @ViewData["DropDown"])
                    .GroupBy(t => t.Colour)
                    .Select(g => g.First())
                    .Select(x => new SelectListItem {  Text = x.Colour, Value = x.Colour })
                    .AsEnumerable()">
                <option value="@ViewData["Colour"]">
                    @if (ViewData["Colour"] == null)
                    {
                        @Html.Raw("--Krāsa--")
                    }
                    else
                    {
                        @ViewData["Colour"]
                    }
                </option>
            </select>
        </div>
        <div id="dataListItem" class="col-md-4">
            <label class="control-label">Pēc apraksta</label>
            <select name="about" class="form-control" value="@ViewData["About"]" asp-items="((IEnumerable<AnimalsViewModel>) @ViewData["DropDown"])
                    .GroupBy(t => t.About)
                    .Select(g => g.First())
                    .Select(x => new SelectListItem {  Text = x.About, Value = x.About })
                    .AsEnumerable()">
                <option value="@ViewData["About"]">
                    @if (ViewData["About"] == null)
                    {
                        @Html.Raw("--Apraksts--")
                    }
                    else
                    {
                        @ViewData["About"]
                    }
                </option>
            </select>
        </div>
        <div id="dataListItem" class="col-md-4">
            <label class="control-label">Pēc svara</label>
            <select name="weight" class="form-control" value="@ViewData["Weight"]" asp-items="((IEnumerable<AnimalsViewModel>) @ViewData["DropDown"])
                    .GroupBy(t => t.Weight)
                    .Select(g => g.First())
                    .Select(x => new SelectListItem {  Text = x.Weight.ToString(), Value = x.Weight.ToString() })
                    .AsEnumerable()">
                <option value="@ViewData["Weight"]">
                    @if (ViewData["Weight"].ToString() == "0")
                    {
                        @Html.Raw("--Svars (Kg)--")
                    }
                    else
                    {
                        @ViewData["Weight"]
                    }
                </option>
            </select>
        </div>
        <div id="dataListItem" class="col-md-4">
            <label class="control-label">Pēc vārda</label>
            <input type="text" name="name" class="form-control" value="@ViewData["Name"]" />
            <input type="hidden" name="pageSize" value="@ViewData["PageSize"]" />
        </div>
        <div id="dataListItem" class="col-md-4" style="padding: 0.4%">
            <input type="submit" value="Meklēt" class="btn btn-default"/>|
            <a asp-action="Index" class="btn btn-default">Noņemt filtrus</a>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" 
                   asp-route-sortOrder="@ViewData["NameSortParm"]"
                   asp-route-pageSize="@ViewData["PageSize"]"
                   asp-route-species="@ViewData["Species"]"
                   asp-route-colour="@ViewData["Colour"]"
                   asp-route-weight="@ViewData["Weight"]"
                   asp-route-about="@ViewData["About"]"
                   asp-route-name="@ViewData["Name"]"
                   asp-route-age="@ViewData["Age"]">
                   Vārds
                </a>
            </th>
            <th>
                <a asp-action="Index" 
                   asp-route-sortOrder="@ViewData["AgeSortParm"]"
                   asp-route-pageSize="@ViewData["PageSize"]"
                   asp-route-species="@ViewData["Species"]"
                   asp-route-colour="@ViewData["Colour"]"
                   asp-route-weight="@ViewData["Weight"]"
                   asp-route-about="@ViewData["About"]"
                   asp-route-name="@ViewData["Name"]"
                   asp-route-age="@ViewData["Age"]">
                   Vecums
                </a>
            </th>
            <th>
                <a asp-action="Index" 
                   asp-route-sortOrder="@ViewData["SpeciesSortParm"]"
                   asp-route-pageSize="@ViewData["PageSize"]"
                   asp-route-species="@ViewData["Species"]"
                   asp-route-colour="@ViewData["Colour"]"
                   asp-route-weight="@ViewData["Weight"]"
                   asp-route-about="@ViewData["About"]"
                   asp-route-name="@ViewData["Name"]"
                   asp-route-age="@ViewData["Age"]">
                   Suga
                </a>
            </th>
            <th>
                <a asp-action="Index" 
                   asp-route-sortOrder="@ViewData["WeightSortParm"]"
                   asp-route-pageSize="@ViewData["PageSize"]"
                   asp-route-species="@ViewData["Species"]"
                   asp-route-colour="@ViewData["Colour"]"
                   asp-route-weight="@ViewData["Weight"]"
                   asp-route-about="@ViewData["About"]"
                   asp-route-name="@ViewData["Name"]"
                   asp-route-age="@ViewData["Age"]">
                   Svars
                </a>
            </th>
            <th>
                <a asp-action="Index" 
                   asp-route-sortOrder="@ViewData["ShelterSortParm"]"
                   asp-route-pageSize="@ViewData["PageSize"]"
                   asp-route-species="@ViewData["Species"]"
                   asp-route-colour="@ViewData["Colour"]"
                   asp-route-weight="@ViewData["Weight"]"
                   asp-route-about="@ViewData["About"]"
                   asp-route-name="@ViewData["Name"]"
                   asp-route-age="@ViewData["Age"]">
                   Patversme
                </a>
            </th>
            <th>
                <a asp-action="Index" 
                   asp-route-sortOrder="@ViewData["ColourSortParm"]"
                   asp-route-pageSize="@ViewData["PageSize"]"
                   asp-route-species="@ViewData["Species"]"
                   asp-route-colour="@ViewData["Colour"]"
                   asp-route-weight="@ViewData["Weight"]"
                   asp-route-about="@ViewData["About"]"
                   asp-route-name="@ViewData["Name"]"
                   asp-route-age="@ViewData["Age"]">
                   Krāsa
                </a>
            </th>
            <th>
                ImagePath
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Species)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Weight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnimalShelterName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Colour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImagePath)
                </td>
                <td>
                    @if (ViewContext.HttpContext.User.IsInRole("administrator") || ViewContext.HttpContext.User.IsInRole("worker"))
                    {
                        @Html.ActionLink("Labot", "Edit", new { id = item.AnimalID })
                        @Html.Raw(" | ")
                        @Html.ActionLink("Dzēst", "Delete", new { id = item.AnimalID })
                        @Html.Raw(" | ")
                    }

                    @Html.ActionLink("Par", "Details", new { id = item.AnimalID })
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-pageSize="@ViewData["PageSize"]"
   asp-route-species="@ViewData["Species"]"
   asp-route-colour="@ViewData["Colour"]"
   asp-route-weight="@ViewData["Weight"]"
   asp-route-about="@ViewData["About"]"
   asp-route-name="@ViewData["Name"]"
   asp-route-age="@ViewData["Age"]"
   class="btn btn-default @prevDisabled">
    Iepriekšējā
</a>
@for (int i = 1; i < (int)ViewData["PageAmount"]; i++)
{
    <a asp-action="Index"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@i"
       asp-route-pageSize="@ViewData["PageSize"]"
       asp-route-species="@ViewData["Species"]"
       asp-route-colour="@ViewData["Colour"]"
       asp-route-weight="@ViewData["Weight"]"
       asp-route-about="@ViewData["About"]"
       asp-route-name="@ViewData["Name"]"
       asp-route-age="@ViewData["Age"]"
       class="btn btn-default">
        @i
    </a>
}
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-pageSize="@ViewData["PageSize"]"
   asp-route-species="@ViewData["Species"]"
   asp-route-colour="@ViewData["Colour"]"
   asp-route-weight="@ViewData["Weight"]"
   asp-route-about="@ViewData["About"]"
   asp-route-name="@ViewData["Name"]"
   asp-route-age="@ViewData["Age"]"
   class="btn btn-default @nextDisabled">
    Nākamā
</a>

