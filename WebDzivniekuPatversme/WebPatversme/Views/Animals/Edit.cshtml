@model WebDzivniekuPatversme.Models.ViewModels.AnimalsViewModel

@{
    ViewData["Title"] = "Labot dzīvnieku";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Labot @Model.Name</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.HiddenFor(model => model.AnimalID)
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Species" class="control-label"></label>
                <select class="form-control" asp-for="Species">
                    <option value="Kaķis">Kaķis</option>
                    <option value="Suns">Suns</option>
                    <option value="Zirgs">Zirgs</option>
                    <option value="Pele">Pele</option>
                    <option value="Žurka">Žurka</option>
                    <option value="Jūrascūciņa">Jūrascūciņa</option>
                    <option value="Zivs">Zivs</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Colour" class="control-label"></label>
                <select class="form-control" asp-for="Colour">
                    <option value="Brūns">Brūns</option>
                    <option value="Melns">Melns</option>
                    <option value="Balts">Balts</option>
                    <option value="Ruds">Ruds</option>
                    <option value="Pelēks">Pelēks</option>
                    <option value="Sarkans">Sarkans</option>
                    <option value="Zils">Zils</option>
                    <option value="Zaļš">Zaļš</option>
                    <option value="Violēts">Violēts</option>
                    <option value="Sudrabs">Sudrabs</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="About" class="control-label"></label>
                <textarea asp-for="About"></textarea>
                <span asp-validation-for="About" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" />
                <span asp-validation-for="Image" class="text-danger" />
            </div>
            <div class="col-sm-9">
                <img src="~/uploads/images/animals/@Model.ImagePath" alt="@Model.Name bilde" onerror="this.onerror = null;this.src = '/uploads/images/animals/defaultanimal.png'" asp-append-version="true"
                     class="rounded-circle"
                     height="200"
                     width="200"
                     style="
                        object-fit: cover;
                        box-shadow: 0px 0px 20px #888;
                        left: 100%;
                        padding: 6px;" />
            </div>
            <div class="form-group">
                @if (Model.AnimalShelters != null)
                {
                    <label asp-for="AnimalShelterName" class="control-label"></label>
                    <select class="form-control" asp-for="AnimalShelterId" asp-items="Model.AnimalShelters
                        .GroupBy(t => t.Name)
                        .Select(g => g.First())
                        .Select(x => new SelectListItem {  
                            Text = x.Name, 
                            Value = x.AnimalShelterID 
                        })
                        .OrderBy(x => x.Text)">
                    </select>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Saglabāt" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Atpakaļ uz sarakstu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        tinymce.init({
            selector: 'textarea',
            width: "100%",
            height: "300",
            content_css: 'writer',
        });
    </script>
}